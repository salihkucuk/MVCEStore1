@model Category

<div class="card-body">
    <div class="form-group">
        <label asp-for="ReyonId"></label>
        <select asp-for="ReyonId" asp-items="@ViewBag.Reyons as SelectList" class="custom-select">
            <option value="" selected disabled>Seçiniz...</option>
        </select>
        <span asp-validation-for="ReyonId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="Enabled" class="form-check-input" />
        <label asp-for="Enabled" class="form-check-label"></label>
    </div>
</div>
   